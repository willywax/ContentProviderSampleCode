<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="212dp"
        android:layout_height="44dp"
        android:text="Data from Server"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="185dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <EditText
            android:id="@+id/cardText"
            android:layout_width="337dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Card Number"
            android:inputType="text"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="155dp" />

        <EditText
            android:id="@+id/volumeText"
            android:layout_width="332dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Volume"
            android:inputType="text"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="219dp" />

        <Button
            android:id="@+id/getButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Get Data"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.5"
        tools:layout_editor_absoluteX="-16dp">

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:text="Status  Code :" />

            <TextView
                android:id="@+id/statusResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nill" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/balanceView"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:text="Card Balance :" />

            <TextView
                android:id="@+id/balanceResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nill" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/RequiredView"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:text="Required Balance :" />

            <TextView
                android:id="@+id/requiredResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nill" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/MessageView"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:text="Message :" />

            <TextView
                android:id="@+id/messageResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nill" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>